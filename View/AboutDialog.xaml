<Window x:Class="Stopwatch.View.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stopwatch.View"
        mc:Ignorable="d" 
        SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        Title="AboutDialog">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Image Margin="5" Source="/resources/images/goran.png" Stretch="None"></Image>
            <StackPanel Margin="5" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock>Stopwatch</TextBlock>
                <TextBlock>1.0.0.0</TextBlock>
            </StackPanel>
        </StackPanel>
        <Button Name="btnOK" Grid.Row="1" Grid.Column="0" Content="OK" Padding="5,2" HorizontalAlignment="Center" Margin="5" Click="btnOK_Click" />
    </Grid>
</Window>
